# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NOTE: Never commit .env file to version control!

# ============================================================================
# OpenAI API Configuration
# ============================================================================

# Your OpenAI API key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-key-here

# Model to use (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# Temperature for responses (0.0-1.0, lower = more deterministic)
OPENAI_TEMPERATURE=0.7

# Maximum tokens per response
OPENAI_MAX_TOKENS=2000

# ============================================================================
# Data Configuration
# ============================================================================

# Path to data directory
DATA_DIR=./data

# Path to output directory
OUTPUT_DIR=./outputs

# Path to logs directory
LOGS_DIR=./logs

# ============================================================================
# Experiment Configuration
# ============================================================================

# Default principal investigator name
DEFAULT_PI=Your Name

# Default organism for experiments
DEFAULT_ORGANISM=Mus musculus

# ============================================================================
# LLM Response Caching
# ============================================================================

# Enable caching of LLM responses to reduce API calls
USE_RESPONSE_CACHE=true

# Cache directory
CACHE_DIR=./.cache

# Cache expiry time in seconds (7 days = 604800)
CACHE_EXPIRY=604800

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=true

# ============================================================================
# API Configuration
# ============================================================================

# API request timeout in seconds
API_TIMEOUT=30

# Maximum number of retries for failed requests
API_MAX_RETRIES=3

# Delay between retries in seconds
API_RETRY_DELAY=1

# ============================================================================
# Feature Flags
# ============================================================================

# Enable experimental/beta features
ENABLE_BETA_FEATURES=false

# Enable strict data validation
STRICT_DATA_VALIDATION=false

# Enable multiprocessing for analysis
USE_MULTIPROCESSING=false

# Number of worker processes
NUM_WORKERS=4
